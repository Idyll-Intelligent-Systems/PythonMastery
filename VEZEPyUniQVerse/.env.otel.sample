# Enable OTEL auto instrumentation in app/main.py
OTEL_ENABLED=1

# OTLP exporter endpoint (default OpenTelemetry Collector)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# Optional: set protocol explicitly (grpc or http/protobuf)
OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# Resource attributes (service name, env)
OTEL_SERVICE_NAME=veze-uniqverse-portal
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=dev
